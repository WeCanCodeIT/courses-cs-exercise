@model Courses.Models.Course

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <h1>Course Details</h1>
    <p>Title: <span>@Model.Name</span></p>
    <p>Instructor: <a href="/Instructor/Details/@Model.InstructorId">@Model.Instructor.Name</a></p>
    <p>Description: <span>@Model.Description</span></p>
    <p>Students:</p>
    <ol>
        @foreach (var student in Model.StudentCourses)
        {
            <li>@student.Student.Name</li>
        }
    </ol>
    <a href="/StudentCourse/CreateByCourseId/@Model.Id">Add a student to this Course</a>
    <hr />
    <a href="/Course/Index">Return to Courses List</a>
    <hr />
    <a href="/Course/Delete/@Model.Id">Delete this Course</a>
</body>
</html>
